---
import Layout from "../layouts/Layout.astro";
import CountDown from "../components/CountDown.astro";
import SocialTags from "../components/SocialTags.astro";
---

<Layout
  title="Gomen's portfolio"
  description="Dev portfolio under construction"
>
  <main class="main">
    <h1 class="main--title">Coming soon</h1>
    <p class="main--text">I'm currently working on creating my portfolio</p>
    <CountDown />
    <SocialTags />
    <!-- <div class="social-media"></div> -->
    <p class="photo--author">
      This photo was taken by <a
        title="Jorge Pacheco instagram"
        href="https://www.instagram.com/jorgepach_07/">Jorge Pacheco</a
      >
    </p>
  </main>
</Layout>

<style lang="scss">
  *,
  *::before,
  *::after {
    margin: 0;
    padding: 0;
  }
  @mixin grid-group {
    display: grid;
    place-content: center;
  }
  body {
    // Above there is an animation

    .main {
      background:
        linear-gradient(
          180deg,
          rgba(0, 0, 0, 0.2) 0%,
          rgba(84, 83, 83, 0.14) 39.77%
        ),
        url("/bg-image.webp"),
        lightgray -52.113px -27.538px / 105.375% 105.179% no-repeat;
      background-size: cover;
      background-position: center;
      // filter: contrast(0.9);
      min-height: 100svh;
      overflow: scroll;
      @include grid-group;

      &--title {
        font-family: var(--ff-inknut);
        font-size: calc(2.2rem + 4vw);
        text-align: center;
      }

      &--text {
        text-align: center;
        font-size: max(1rem, 1.5vw);
        font-weight: 500;
      }
      .photo--author {
        font-size: max(1rem, 1.3vw);
        font-weight: 500;
        text-align: center;
        margin-block: 2rem min(1rem, 2vw);

        //& a:has(:visited, :link, :hover) {
        // LVHA
        & a:visited,
        a:link,
        a:hover,
        a:active {
          color: white;
          font-weight: 500;
        }
      }
    }
  }
</style>
